{
  "permissions": {
    "allow": [
      "Edit",
      "Read",
      "Write",
      "Grep",
      "Glob",
      "LS",
      "Bash(rg:*)",
      "Bash(jq:*)",
      "Bash(pnpm:*)",
      "Bash(npm:*)",
      "Bash(pytest:*)",
      "Bash(python:*)",
      "Bash(node:*)",
      "Bash(http:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)"
    ],
    "ask": [
      "WebFetch",
      "Bash(docker:*)",
      "Bash(kubectl:*)",
      "Bash(terraform:*)",
      "Bash(git push:*)",
      "Bash(rm -rf:*)",
      "Bash(aws:*)",
      "Bash(az:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Bash(sudo:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "env": {
    "TEACH_MODE": "1",
    "VERBOSITY": "medium",
    "EXPLAIN_COMMANDS": "1",
    "MAX_DIFF_SIZE": "100",
    "DEFAULT_COT": "cot-structured",
    "EXTENDED_THINKING": "off",
    "THINK_BUDGET_BULLETS": "5"
  },
  "description": "Beginner - New to repo & tools. Plan→Code→Test loop with verbose steps, strict guardrails."
}
